#include <iostream>

using namespace std;

int Tambah (int x, int y)
{
    int hasil;
    hasil=x+y;
    return hasil;
}

int kurang (int x, int y)
{
    int hasil;
    hasil=x-y;
    return hasil;
}

int kali (int x, int y)
{
    int hasil;
    hasil=x*y;
    return hasil;
}

int bagi (int x, int y)
{
    int hasil;
    hasil=x/y;
    return hasil;
}

int Modulus (int x, int y)
{
    int hasil;
    hasil=x%y;
    return hasil;
}
int main()
{
    int bilangan1,bilangan2,hasil1,hasil2,hasil3,hasil4,hasil5;
    cout<<"Masukan Bilangan 1: ";
    cin>>bilangan1;
    cout<<"Masukan Bilangan 2: ";
    cin>>bilangan2;

    hasil1 = Tambah(bilangan1,bilangan2);
    hasil2 = kurang(bilangan1,bilangan2);
    hasil3 = kali(bilangan1,bilangan2);
    hasil4 = bagi(bilangan1,bilangan2);
    hasil5 = Modulus(bilangan1,bilangan2);

    cout<<endl<<"Hasil Tambah:"<<hasil1;
    cout<<endl<<"Hasil kurang:"<<hasil2;
    cout<<endl<<"Hasil kali:"<<hasil3;
    cout<<endl<<"Hasil bagi:"<<hasil4;
    cout<<endl<<"Hasil Modulus:"<<hasil5;



}

